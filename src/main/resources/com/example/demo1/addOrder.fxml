<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="1000" prefWidth="1000" style="-fx-background-color: #1a1a1a" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.AddOrderController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
        <Label layoutX="170" layoutY="300" style="-fx-text-fill: white; -fx-font-size: 24pt; -fx-font-weight: bold; -fx-font-family: 'Impact';" text="Customer ID:" />
        <TextField fx:id="customerIdField" layoutX="400" layoutY="300" prefWidth="400" style="-fx-background-color: #212121; -fx-text-fill: white; -fx-font-size: 15pt;" />

        <Label layoutX="170" layoutY="350" style="-fx-text-fill: white; -fx-font-size: 24pt; -fx-font-weight: bold; -fx-font-family: 'Impact';" text="YYYY-MM-DD:" />
        <TextField fx:id="orderDateField" layoutX="400" layoutY="350" prefWidth="400" style="-fx-background-color: #212121; -fx-text-fill: white; -fx-font-size: 15pt;" />

        <Button layoutX="400" layoutY="450" onAction="#handleAddOrder" styleClass="add-button">
            <graphic>
                <Text styleClass="button-text" text="Add">
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" spread="0.65" width="15.0">
                     <color>
                        <Color red="0.6784313917160034" green="1.0" blue="0.18431372940540314" />
                     </color></DropShadow>
                    </effect>
                </Text>
            </graphic>
        </Button>

        <Button layoutX="550" layoutY="450" onAction="#handleCancel" styleClass="back-button">
            <graphic>
                <Text styleClass="button-text" text="Cancel">
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" spread="0.65" width="15.0">
                     <color>
                        <Color red="0.8627451062202454" green="0.0784313753247261" blue="0.23529411852359772" />
                     </color></DropShadow>
                    </effect>
                </Text>
            </graphic>
        </Button>
    </children>
</AnchorPane>
