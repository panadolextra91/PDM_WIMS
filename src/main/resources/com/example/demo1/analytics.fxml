<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="696" prefWidth="950" spacing="10" style="-fx-background-color: #1a1a1a" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.AnalyticsController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <children>
        <Button onAction="#backToMainMenu" styleClass="back-button">
            <graphic>
                <Text styleClass="button-text" text="Back to Main Menu">
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" spread="0.65" width="15.0">
                     <color>
                        <Color red="0.8627451062202454" green="0.0784313753247261" blue="0.23529411852359772" />
                     </color></DropShadow>
                    </effect>
                </Text>
            </graphic>
        </Button>
        <BarChart fx:id="salesChart" prefHeight="300" prefWidth="600" title="Sales of Each Product">
            <xAxis>
                <CategoryAxis label="Product" />
            </xAxis>
            <yAxis>
                <NumberAxis label="Sales" />
            </yAxis>
        </BarChart>
        <TableView fx:id="lowStockTable" prefHeight="200" prefWidth="600">
            <columns>
                <TableColumn fx:id="productNameColumn" text="Product Name" />
                <TableColumn fx:id="currentStockColumn" text="Current Stock" />
            </columns>
        </TableView>
        <PieChart fx:id="revenueChart" title="Total Revenue" />
    </children>
</VBox>
