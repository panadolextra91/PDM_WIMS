<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="1000" prefWidth="1000" styleClass="root-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.ManageCustomersController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
        <VBox fx:id="contentVBox" alignment="CENTER" layoutX="50" layoutY="50" prefHeight="696.0" prefWidth="900" spacing="20.0" styleClass="vbox-pane">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Label style="-fx-text-fill: black;" styleClass="title-label" text="MANAGE CUSTOMERS">
               <effect>
                  <DropShadow blurType="GAUSSIAN" height="15.0" radius="7.0" spread="0.65" width="15.0">
                     <color>
                        <Color red="1.0" green="0.4117647111415863" blue="0.7058823704719543" />
                     </color>
                  </DropShadow>
               </effect></Label>
                <TextField fx:id="searchField" onKeyReleased="#handleSearch" promptText="Search Customer by ID" styleClass="search-field" />
                <TableView fx:id="customerTableView" prefHeight="240" styleClass="table-view">
                    <columns>
                        <TableColumn fx:id="customerIdColumn" style="-fx-text-fill: white" text="Customer ID" />
                        <TableColumn fx:id="customerNameColumn" style="-fx-text-fill: white" text="Name" />
                        <TableColumn fx:id="customerEmailColumn" style="-fx-text-fill: white" text="Email" />
                    </columns>
                </TableView>
                <Button onAction="#addCustomer" styleClass="add-button">
                    <graphic>
                        <Text styleClass="button-text" text="Add Customer">
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" spread="0.65" width="15.0">
                           <color>
                              <Color red="0.6784313917160034" green="1.0" blue="0.18431372940540314" />
                           </color></DropShadow>
                            </effect>
                        </Text>
                    </graphic>
                </Button>
                <Button onAction="#updateCustomer" styleClass="update-button">
                    <graphic>
                        <Text styleClass="button-text" text="Update Customer">
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" spread="0.65" width="15.0">
                           <color>
                              <Color green="1.0" blue="1.0" />
                           </color></DropShadow>
                            </effect>
                        </Text>
                    </graphic>
                </Button>
                <Button onAction="#deleteCustomer" styleClass="delete-button">
                    <graphic>
                        <Text styleClass="button-text" text="Delete Customer">
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" spread="0.65" width="15.0">
                           <color>
                              <Color red="1.0" blue="1.0" />
                           </color></DropShadow>
                            </effect>
                        </Text>
                    </graphic>
                </Button>
                <Button onAction="#backToMainMenu" styleClass="back-button">
                    <graphic>
                        <Text styleClass="button-text" text="Back to Main Menu">
                            <effect>
                                <DropShadow blurType="ONE_PASS_BOX" height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" spread="0.65" width="15.0">
                           <color>
                              <Color red="0.8627451062202454" green="0.0784313753247261" blue="0.23529411852359772" />
                           </color></DropShadow>
                            </effect>
                        </Text>
                    </graphic>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
