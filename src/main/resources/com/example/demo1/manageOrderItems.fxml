<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Text?>

<HBox prefHeight="1000" prefWidth="1600" styleClass="root-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.ManageOrderItemsController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
              <!-- Sidebar without a separate fx:controller -->
             <VBox alignment="CENTER" prefHeight="790.0" prefWidth="300" spacing="20.0" styleClass="sidebar">
                 <stylesheets>
                     <URL value="@styles.css" />
                 </stylesheets>
                 <children>
                     <JFXButton onAction="#manageOrders"  styleClass="sidebar-button" text="">
                         <graphic>
                             <Text text="Manage Orders">
                                 <effect>
                                     <DropShadow color="magenta" offsetX="2" offsetY="2" radius="5" />
                                 </effect>
                             </Text>
                         </graphic>
                     </JFXButton>
                     <JFXButton onAction="#manageOrderItems"  styleClass="sidebar-button" text="">
                         <graphic>
                             <Text text="Manage Order Items">
                                 <effect>
                                     <DropShadow color="aqua" offsetX="2" offsetY="2" radius="5" />
                                 </effect>
                             </Text>
                         </graphic>
                     </JFXButton>
                     <JFXButton onAction="#manageCustomers"  styleClass="sidebar-button" text="">
                         <graphic>
                             <Text text="Manage Customers">
                                 <effect>
                                     <DropShadow color="yellowgreen" offsetX="2" offsetY="2" radius="5" />
                                 </effect>
                             </Text>
                         </graphic>
                     </JFXButton>
                     <JFXButton onAction="#manageProducts"  styleClass="sidebar-button" text="">
                         <graphic>
                             <Text text="Manage Products">
                                 <effect>
                                     <DropShadow color="orange" offsetX="2" offsetY="2" radius="5" />
                                 </effect>
                             </Text>
                         </graphic>
                     </JFXButton>
                     <JFXButton onAction="#manageManagers"  styleClass="sidebar-button" text="">
                         <graphic>
                             <Text text="Manage Managers">
                                 <effect>
                                     <DropShadow color="deeppink" offsetX="2" offsetY="2" radius="5" />
                                 </effect>
                             </Text>
                         </graphic>
                     </JFXButton>
                     <JFXButton onAction="#manageAreas"  styleClass="sidebar-button" text="">
                         <graphic>
                             <Text text="Manage Areas">
                                 <effect>
                                     <DropShadow color="yellow" offsetX="2" offsetY="2" radius="5" />
                                 </effect>
                             </Text>
                         </graphic>
                     </JFXButton>
                     <JFXButton onAction="#showAnalytics" styleClass="sidebar-button" text="">
                         <graphic>
                             <Text text="Analytics">
                                 <effect>
                                     <DropShadow color="#a555ec" offsetX="2" offsetY="2" radius="5" />
                                 </effect>
                             </Text>
                         </graphic>
                     </JFXButton>
                 </children>
                 <HBox prefHeight="14.0" prefWidth="235.0">
                     <children>
                         <Button cancelButton="true" mnemonicParsing="false" style="-fx-background-color: orange; -fx-background-radius: 50;">
                             <graphic>
                                 <!-- Avatar Text Node -->
                                 <Text fill="WHITE" style="-fx-font-size: 35; -fx-font-family: Impact; -fx-padding: 20;" text="AD" />
                             </graphic>
                         </Button>
                         <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: Impact; -fx-font-size: 20pt;" styleClass="sidebar-button" text="Welcome, Admin" textAlignment="CENTER" wrappingWidth="203.21630859375">
                             <HBox.margin>
                                 <Insets top="10.0" />
                             </HBox.margin>
                         </Text>
                     </children>
                 </HBox>
             </VBox>
         </children>
      </AnchorPane>
        <!-- Main content area controlled by ManageOrderItemsController -->
        <AnchorPane fx:id="contentPane" prefHeight="1000" prefWidth="1300" styleClass="root-pane">
            <children>
                <VBox fx:id="contentVBox" alignment="CENTER" layoutX="50" layoutY="50" prefHeight="696.0" prefWidth="900" spacing="20.0" styleClass="vbox-pane">
                    <padding>
                        <Insets bottom="10" left="10" right="10" top="10" />
                    </padding>
                    <children>
                        <Label style="-fx-text-fill: black;" styleClass="title-label" text="MANAGE ORDER ITEMS">
                            <effect>
                                <DropShadow blurType="GAUSSIAN" height="15.0" radius="7.0" spread="0.65" width="15.0">
                                    <color>
                                        <Color red="1.0" green="0.4117647111415863" blue="0.7058823704719543" />
                                    </color>
                                </DropShadow>
                            </effect>
                        </Label>
                        <TextField fx:id="searchField" onKeyReleased="#handleSearch" promptText="Search Order Items by ID" styleClass="search-field" />
                        <TableView fx:id="orderItemTableView" prefHeight="240" styleClass="table-view">
                            <columns>
                                <TableColumn fx:id="orderItemIdColumn" style="-fx-text-fill: white" text="Order Item ID" />
                                <TableColumn fx:id="orderIdColumn" style="-fx-text-fill: white" text="Order ID" />
                                <TableColumn fx:id="productIdColumn" style="-fx-text-fill: white" text="Product ID" />
                                <TableColumn fx:id="quantityColumn" style="-fx-text-fill: white" text="Quantity" />
                            </columns>
                        </TableView>
                        <JFXButton onAction="#addOrderItem" styleClass="add-button" text="">
                            <graphic>
                                <Text styleClass="button-text" text="Add Order Item">
                                    <effect>
                                        <DropShadow blurType="ONE_PASS_BOX" height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" spread="0.65" width="15.0">
                                            <color>
                                                <Color red="0.6784313917160034" green="1.0" blue="0.18431372940540314" />
                                            </color>
                                        </DropShadow>
                                    </effect>
                                </Text>
                            </graphic>
                        </JFXButton>
                        <JFXButton onAction="#updateOrderItem" styleClass="update-button" text="">
                            <graphic>
                                <Text styleClass="button-text" text="Update Order Item">
                                    <effect>
                                        <DropShadow height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" spread="0.65" width="15.0">
                                            <color>
                                                <Color green="1.0" blue="1.0" />
                                            </color>
                                        </DropShadow>
                                    </effect>
                                </Text>
                            </graphic>
                        </JFXButton>
                        <JFXButton onAction="#deleteOrderItem" styleClass="delete-button" text="">
                            <graphic>
                                <Text styleClass="button-text" text="Delete Order Item">
                                    <effect>
                                        <DropShadow blurType="ONE_PASS_BOX" height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" spread="0.65" width="15.0">
                                            <color>
                                                <Color red="1.0" blue="1.0" />
                                            </color>
                                        </DropShadow>
                                    </effect>
                                </Text>
                            </graphic>
                        </JFXButton>
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</HBox>
