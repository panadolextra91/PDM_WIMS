<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Text?>

<?import com.jfoenix.controls.JFXButton?>
<AnchorPane prefHeight="1000" prefWidth="1000" style="-fx-background-color: #1a1a1a" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.UpdateProductController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
        <Label layoutX="200" layoutY="250" style="-fx-text-fill: white; -fx-font-size: 24pt; -fx-font-weight: bold; -fx-font-family: 'Impact';" text="Product ID:" />
        <TextField fx:id="productIdField" layoutX="400" layoutY="250" prefWidth="400" style="-fx-background-color: #212121; -fx-text-fill: white; -fx-font-size: 15pt;" />

        <Label layoutX="200" layoutY="300" style="-fx-text-fill: white; -fx-font-size: 24pt; -fx-font-weight: bold; -fx-font-family: 'Impact';" text="Name:" />
        <TextField fx:id="nameField" layoutX="400" layoutY="300" prefWidth="400" style="-fx-background-color: #212121; -fx-text-fill: white; -fx-font-size: 15pt;" />

        <Label layoutX="200" layoutY="350" style="-fx-text-fill: white; -fx-font-size: 24pt; -fx-font-weight: bold; -fx-font-family: 'Impact';" text="Price:" />
        <TextField fx:id="priceField" layoutX="400" layoutY="350" prefWidth="400" style="-fx-background-color: #212121; -fx-text-fill: white; -fx-font-size: 15pt;" />

        <Label layoutX="200" layoutY="400" style="-fx-text-fill: white; -fx-font-size: 24pt; -fx-font-weight: bold; -fx-font-family: 'Impact';" text="Quantity:" />
        <TextField fx:id="quantityField" layoutX="400" layoutY="400" prefWidth="400" style="-fx-background-color: #212121; -fx-text-fill: white; -fx-font-size: 15pt;" />

        <JFXButton layoutX="400" layoutY="450" onAction="#handleUpdateProduct" styleClass="update-button" text="">
            <graphic>
                <Text styleClass="button-text" text="Update">
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" spread="0.65" width="15.0">
                     <color>
                        <Color green="1.0" blue="1.0" />
                     </color></DropShadow>
                    </effect>
                </Text>
            </graphic>
        </JFXButton>

        <JFXButton layoutX="600" layoutY="450" onAction="#handleCancel" styleClass="back-button" text="">
            <graphic>
                <Text styleClass="button-text" text="Cancel">
                    <effect>
                        <DropShadow blurType="ONE_PASS_BOX" height="15.0" offsetX="1.0" offsetY="1.0" radius="7.0" spread="0.65" width="15.0">
                     <color>
                        <Color red="0.8627451062202454" green="0.0784313753247261" blue="0.23529411852359772" />
                     </color></DropShadow>
                    </effect>
                </Text>
            </graphic>
        </JFXButton>
    </children>
</AnchorPane>
